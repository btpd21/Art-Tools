+// Exponential-ish curve that boosts low/mid sensitivity.
+// Input v in [a,b]; k in (0,1). Smaller k = stronger boost.
+function curveExpo(v, a, b, k) {
+  const t = (v - a) / (b - a);
+  const t2 = Math.pow(Math.max(0, Math.min(1, t)), k);
+  return a + t2 * (b - a);
+}
